<loggers>
	<logger>
		<type>FILES</type>
		<name>LogParser</name>
		<output>
			<fileName>parserLog.log</fileName>
			<levelLog>DEBUG</levelLog>
			<formatDate>dd/M/yyyy</formatDate>
			<patternMessage>%L-%n-%d-%n-%g-%n-%p-%n-%m</patternMessage>
			<separator>-</separator>
			<regularExpresion>^[a-zA-Z0-9]*$</regularExpresion>
			<customFilter>
				<valPattern pattern="%L">^\d+$</valPattern>
				<valPattern pattern="%g">LogParser</valPattern>
				<valPattern pattern="%m">[a..zA..z]</valPattern>
			</customFilter>			
		</output>
	</logger>
	<logger>
		<type>FILES</type>
		<name>LogIndexer</name>
		<output>
			<fileName>indexerLog.log</fileName>
			<levelLog>DEBUG</levelLog>
			<formatDate>dd/M/yyyy</formatDate>
			<patternMessage>%L-%n-%d-%n-%g-%n-%p-%n-%m</patternMessage>
			<separator>-</separator>
			<regularExpresion>^[a-zA-Z0-9]*$</regularExpresion>
			<customFilter>
				<valPattern pattern="%L">^\d+$</valPattern>
				<valPattern pattern="%g">LogParser</valPattern>
				<valPattern pattern="%m">^*patter14</valPattern>
			</customFilter>			
		</output>
	</logger>
</loggers>